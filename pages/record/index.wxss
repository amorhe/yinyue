/* pages/record/index.wxss */
.function_content {
  padding: 25rpx 0;
}
.cource_title {
  color: #333;
  font-size:32rpx;
  font-weight: bold;
  text-align: center
}
.cource_content {
  padding: 4rpx 20rpx;
  text-align: center;
  font-size:26rpx;
  color: #666
}
.cource_cover {
  position: relative;
  left: 162rpx;
  top: 92rpx;
}
.cource_img {
  width:334rpx;
  height:438rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  box-shadow:0px 4rpx 38rpx 0px rgba(61,207,148,0.22);
}
.cource_icon {
  width: 432rpx;
  height: 432rpx;
  position: absolute;
  left: 44rpx;
  top: 0
}
.function_view {
  display: flex;
  padding: 0 200rpx;
  position: relative;
  top: 758rpx;
  left: 0;
  justify-content: space-between;
  align-items: center;
}
.imgL {
  width: 48rpx;
  height: 44rpx;
  cursor: pointer;
}
.imgT {
  width: 36rpx;
  height: 40rpx;
  cursor: pointer;
}
.imgH {
  width: 90rpx;
  height: 90rpx;
  cursor: pointer;
}
.btn {
  position: absolute;
  right: 192rpx;
  top: 26rpx;
  width: 48rpx;
  height: 44rpx;
  opacity: 0;
  z-index: 10
}


.alertView {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center
}
.codeView {
  width: 500rpx;
  height: 500rpx;
  background: #fff
}
.codeView>image {
  width: 100%;
  height: 100%
}